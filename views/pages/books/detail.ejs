<html lang="en">
    <head>
        <%- include('../../layout/head.ejs') %>
    </head>
    <body>
        <h1><%= myChosenBook.title %></h1>
        <p><%= myChosenBook.description %></p>
        <p><%= myChosenBook.author %></p>
